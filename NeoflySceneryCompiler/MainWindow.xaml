
<Window
    x:Class="NeoflySceneryCompiler.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NeoflySceneryCompiler"
    Title="Neofly Scenery Compiler" Height="300" Width="500">

    <StackPanel Padding="20" Spacing="10">
        <TextBlock Text="Neofly Scenery Compiler for MSFS 2024" FontSize="20" FontWeight="Bold"/>
        <Button Content="Select Neofly Project XML and Compile" Click="CompileButton_Click"/>
        <TextBox x:Name="OutputBox" AcceptsReturn="True" Height="150" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
